<h2>Create a new Recipe </h2>
<%= form_with model: @recipe do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :preparation_time %>
    <%= f.text_field  :preparation_time %>
  </div>
  <div>
    <%= f.label :Coocking_time %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <%=f.submit "create "%>
<% end %> 