<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit price($)</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @foods.each do |food| %>
        <% if food.user == current_user %>
        <tr>
          <td>
<%= food.name %>


          </td>
          
          <td><%= food.measurement_unit %></td>
          <td><%= food.price %></td>
          <td><%= food.quantity %></td>
          <td>
							<span class="col-xs-6 text-left">
								<i><%= link_to "edit", edit_food_path(food) %></i>
						    </span>

							<span class="col-xs-6 text-right">
								<i><%= link_to "Delete", food_path(food.id), method: :delete, data: { confirm: "Are you sure?" }, id: "delete_button" %></i>
						    </span>
						</td>

          <%
=begin%>
 <td><%= link_to 'Delete', food, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td> 
<%
=end%>
          
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add Food', new_food_path, class:"btn btn-secondary" %>
<% else %>

<h1>Hello World!</h1>

<% end %>